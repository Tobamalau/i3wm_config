# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
}

# order += "ipv6"
order += "volume master"
order += "disk /media/tobias/dataHDD"
order += "disk /home"
order += "disk /"
# order += "wireless _first_"
order += "ethernet _first_"
# order += "battery all"
order += "cpu_usage"
order += "load"
order += "tztime local"

wireless _first_ {
        format_up = "W: (%quality at %essid) %ip"
        format_down = "W: down"
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

battery all {
        format = "%status %percentage %remaining"
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}

load {
        format = "waiting processes: %1min"
}

disk "/media/tobias/dataHDD" {
        format = "dataHDD: %avail"
}

disk "/home" {
        format = "/home: %avail"
}

disk "/" {
        format = "/: %avail"
}

volume master {
        format = "♪: %volume"
        format_muted = "♪: muted (%volume)"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

cpu_usage {
	format = "cpu: %usage"
}
